generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model RawMaterial {
  id           String   @id @default(cuid())
  kode         String   @unique
  name         String
  currentStock Float    @default(0)
  moq          Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  stockMovements StockMovement[]
  batchUsages    BatchUsage[]
  drums          Drum[]

  @@map("raw_materials")
}

model Drum {
  id              String      @id @default(cuid())
  label           String // User input ID (e.g., "DRUM-001")
  currentQuantity Float
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  rawMaterialId String
  rawMaterial   RawMaterial @relation(fields: [rawMaterialId], references: [id])
  stockMovements StockMovement[]
  batchUsages    BatchUsage[]

  @@unique([rawMaterialId, label]) // Unique label per material
  @@map("drums")
}

model FinishedGood {
  id           String   @id @default(cuid())
  name         String
  currentStock Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  stockMovements     StockMovement[]
  batchFinishedGoods BatchFinishedGood[]
  stocks             FinishedGoodStock[]

  @@map("finished_goods")
}

model StockMovement {
  id          String            @id @default(cuid())
  type        StockMovementType
  quantity    Float
  date        DateTime
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  locationId     String?
  location       Location?     @relation(fields: [locationId], references: [id], onDelete: SetNull)
  rawMaterialId  String?
  rawMaterial    RawMaterial?  @relation(fields: [rawMaterialId], references: [id], onDelete: SetNull)
  drumId         String?
  drum           Drum?         @relation(fields: [drumId], references: [id], onDelete: SetNull)
  finishedGoodId String?
  finishedGood   FinishedGood? @relation(fields: [finishedGoodId], references: [id], onDelete: SetNull)
  batchId        String?
  batch          Batch?        @relation(fields: [batchId], references: [id], onDelete: SetNull)

  // Performance indexes for common queries
  @@index([date])
  @@index([rawMaterialId, date])
  @@index([finishedGoodId, date])
  @@index([type, date])
  @@map("stock_movements")
}

model Location {
  id          String   @id @default(cuid())
  name        String   @unique
  address     String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  stocks         FinishedGoodStock[]
  stockMovements StockMovement[]

  @@map("locations")
}

model FinishedGoodStock {
  id             String       @id @default(cuid())
  finishedGoodId String
  locationId     String
  quantity       Float        @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  finishedGood   FinishedGood @relation(fields: [finishedGoodId], references: [id])
  location       Location     @relation(fields: [locationId], references: [id])

  @@unique([finishedGoodId, locationId])
  @@map("finished_good_stocks")
}

model Batch {
  id          String      @id @default(cuid())
  code        String      @unique
  date        DateTime
  description String?
  status      BatchStatus @default(IN_PROGRESS)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  stockMovements     StockMovement[]
  batchUsages        BatchUsage[]
  batchFinishedGoods BatchFinishedGood[]

  // Performance indexes for common queries
  @@index([date])
  @@index([status])
  @@map("batches")
}

model BatchUsage {
  id            String @id @default(cuid())
  quantity      Float
  batchId       String
  rawMaterialId String
  drumId        String? // Made optional for backward compatibility if needed, but best if required for new batches

  // Relations
  batch       Batch       @relation(fields: [batchId], references: [id], onDelete: Cascade)
  rawMaterial RawMaterial @relation(fields: [rawMaterialId], references: [id])
  drum        Drum?       @relation(fields: [drumId], references: [id])

  @@unique([batchId, rawMaterialId, drumId])
  @@map("batch_usages")
}

model BatchFinishedGood {
  id             String @id @default(cuid())
  quantity       Float
  batchId        String
  finishedGoodId String

  // Relations
  batch        Batch        @relation(fields: [batchId], references: [id], onDelete: Cascade)
  finishedGood FinishedGood @relation(fields: [finishedGoodId], references: [id])

  @@unique([batchId, finishedGoodId])
  @@map("batch_finished_goods")
}

enum StockMovementType {
  IN
  OUT
  ADJUSTMENT
}

enum BatchStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum UserRole {
  ADMIN
  OFFICE_PURCHASING
  OFFICE_WAREHOUSE
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String?  @unique
  password  String // Hashed with bcrypt
  name      String
  role      UserRole @default(OFFICE_PURCHASING)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
