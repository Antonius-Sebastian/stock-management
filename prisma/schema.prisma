generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") 
}

model RawMaterial {
  id          String   @id @default(cuid())
  kode        String   @unique
  name        String
  currentStock Float   @default(0)
  moq         Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  stockMovements StockMovement[]
  batchUsages    BatchUsage[]

  @@map("raw_materials")
}

model FinishedGood {
  id          String   @id @default(cuid())
  name        String
  currentStock Float   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  stockMovements StockMovement[]
  batches        Batch[]

  @@map("finished_goods")
}

model StockMovement {
  id          String            @id @default(cuid())
  type        StockMovementType
  quantity    Float
  date        DateTime
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  rawMaterialId  String?
  rawMaterial    RawMaterial?  @relation(fields: [rawMaterialId], references: [id], onDelete: SetNull)
  finishedGoodId String?
  finishedGood   FinishedGood? @relation(fields: [finishedGoodId], references: [id], onDelete: SetNull)
  batchId        String?
  batch          Batch?        @relation(fields: [batchId], references: [id], onDelete: SetNull)

  @@map("stock_movements")
}

model Batch {
  id               String        @id @default(cuid())
  code             String        @unique
  date             DateTime
  description      String?
  finishedGoodId   String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  finishedGood     FinishedGood  @relation(fields: [finishedGoodId], references: [id], onDelete: Restrict)
  stockMovements   StockMovement[]
  batchUsages      BatchUsage[]

  @@map("batches")
}

model BatchUsage {
  id            String  @id @default(cuid())
  quantity      Float
  batchId       String
  rawMaterialId String

  // Relations
  batch         Batch       @relation(fields: [batchId], references: [id], onDelete: Cascade)
  rawMaterial   RawMaterial @relation(fields: [rawMaterialId], references: [id])

  @@unique([batchId, rawMaterialId])
  @@map("batch_usages")
}

enum StockMovementType {
  IN
  OUT
}

enum UserRole {
  ADMIN
  FACTORY
  OFFICE
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String?   @unique
  password      String    // Hashed with bcrypt
  name          String
  role          UserRole  @default(OFFICE)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
